{
  "name": "wordle",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://andrewrichardson.github.io/wordle-dupe/",
  "dependencies": {
    "@craco/craco": "^7.1.0",
    "@testing-library/jest-dom": "^6.3.0",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "^5.0.1",
    "styled-components": "^6.1.8",
    "typescript": "^5.3.3",
    "uuid": "^9.0.1",
    "web-vitals": "^3.5.2"
  },
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "test": "craco test --watchAll=false --coverage",
    "lint": "yarn lint-code && yarn lint-styles",
    "lint-code": "eslint src/**/*.{ts,tsx}",
    "lint-code:fix": "prettier --write src/**/*.{ts,tsx}",
    "lint-styles": "stylelint src/**/*.css",
    "lint-styles:fix": "stylelint --fix src/**/*.css"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "resolutions": {
    "nth-check": "^2.1.1",
    "postcss": "^8.4.33"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.16",
    "@types/react": "^18.2.54",
    "@types/react-dom": "^18.2.18",
    "@types/styled-components": "^5.1.34",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/parser": "^6.21.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "autoprefixer": "^10.4.17",
    "jest": "^29.7.0",
    "postcss": "^8.4.33",
    "prettier": "^3.2.4",
    "stylelint": "^16.2.0",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-recommended": "^14.0.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-prettier": "^5.0.0",
    "tailwindcss": "^3.4.1"
  },
  "browser": {
    "crypto": false
  },
  "jest": {
    "clearMocks": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coveragePathIgnorePatterns": [
      "node_modules",
      "src/index.tsx",
      "src/assets/colorPalette.ts",
      ".mock.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 20,
        "functions": 30,
        "lines": 50,
        "statements": 50
      }
    },
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/"
    ]
  }
}
